<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sinervis_file_uploader_bundle_api"
           controller="sinervis_file_uploader.controller.sinervis_file_controller::uploadFile"
           path="/sinervis-file-upload-api"
           methods="POST|PUT">
    </route>

    <route id="sinervis_file_uploader_bundle_api_file_download"
           controller="sinervis_file_uploader.controller.sinervis_file_controller::downloadFile"
           path="/sinervis-file-upload-api/download/{id}"
           methods="GET">
    </route>
</routes>