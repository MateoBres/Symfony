{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-4 offset-md-4">
  <div class="z-depth-bottom-0 card panel-block-course">
    <header class="card-header extra-side-padding panel-heading font-weight-bold">MODIFICA DATI ACCOUNT</header>
    <div role="content" class="card-block panel-body mx-auto">
      <div class="form-row">
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit', 'novalidate': 'novalidate'} }) }}
          {{ form_widget(form) }}
            <div class="mx-auto text-center">
              <input class="btn btn-inverse btn-sm" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
            </div>
          {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>