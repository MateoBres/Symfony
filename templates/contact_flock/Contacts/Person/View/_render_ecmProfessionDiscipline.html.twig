{% if ecmProfessions.count %}
    <table class="table table-sm table-bordered">
        <thead>
        <tr>
            <th>Professione</th>
            <th>Discipline</th>
        </tr>
        </thead>
        {% for ecmPD in ecmProfessions %}
            <tr>
                <td>{{ ecmPD.profession.name }}</td>
                <td>
                    <ul>
                        {% for discipline in ecmPD.disciplines %}
                            <li>{{ discipline.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p class="text-warning font-weight-bold">Non ci sono professioni/discipline associate</p>
{% endif %}